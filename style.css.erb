body
{
	background-color: #1d83c2;
}
div .main
{
	width: 90%;
	margin-left: auto;
	margin-right: auto;
	border-top-right-radius: 15px;
	border-top-left-radius: 15px;
	background-color: #a4a9ab;
}

div #showcase-progress
{
	width: 30%;
	margin: auto;
	border-top-right-radius: 15px;
	border-top-left-radius: 15px;
	float: left;

	color: <%= progress['color'] %>
}

div .title
{
	text-align: center;
	font-size: 16px;
}

div .subtitle
{
	text-align: center;
	font-size: 12px;
}

div #messages
{
	width: 55%;
	margin: auto;
	border-top-right-radius: 15px;
	border-top-left-radius: 15px;
	float: right;
}